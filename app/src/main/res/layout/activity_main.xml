<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.houch.imageswithchdemo.MainActivity">

    <com.example.houch.imageswithchdemo.View.Image3DSwitchView
        android:id="@+id/image_switch_view"
        android:layout_width="match_parent"
        android:layout_height="120dp" >

        <com.example.houch.imageswithchdemo.View.Image3DView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/img1" />

        <com.example.houch.imageswithchdemo.View.Image3DView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img2" />

        <com.example.houch.imageswithchdemo.View.Image3DView

            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img3" />

        <com.example.houch.imageswithchdemo.View.Image3DView

            android:id="@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img4" />

        <com.example.houch.imageswithchdemo.View.Image3DView

            android:id="@+id/image5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img5" />

        <com.example.houch.imageswithchdemo.View.Image3DView

            android:id="@+id/image6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img7" />

    </com.example.houch.imageswithchdemo.View.Image3DSwitchView>

</RelativeLayout>
